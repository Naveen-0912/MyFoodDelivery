<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <ripple android:color="@color/ripple_color" >
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <solid android:color="?attr/colorSecondary"/>
                    <corners android:radius="10dp" />
                </shape>
            </item>
        </ripple>
    </item>

    <item>
        <shape android:shape="rectangle">
            <padding android:top="3dp" android:bottom="3dp" />
            <stroke android:width="1dp" android:color="?android:textColorTertiary"/>
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item android:drawable="@drawable/baseline_arrow_drop_down_24_dark" android:gravity="right"/>
</layer-list>
