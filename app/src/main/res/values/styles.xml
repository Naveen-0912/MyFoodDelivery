<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GeneralAlertDialogDark" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_inset_light</item>
        <item name="android:windowAnimationStyle">@style/customDialogAnimation</item>
    </style>

    <style name="GeneralAlertDialogLight" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_inset_dark</item>
        <item name="android:windowAnimationStyle">@style/customDialogAnimation</item>
    </style>

    <style name="categoriesAlertDialogLight" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_inset_light</item>
        <item name="android:windowAnimationStyle">@style/customDialogAnimation</item>
    </style>

    <style name="categoriesAlertDialogDark" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_inset_dark</item>
        <item name="android:windowAnimationStyle">@style/customDialogAnimation</item>
    </style>

    <style name="customDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/enter_from_left</item>
        <item name="android:windowExitAnimation">@anim/exit_to_right</item>
    </style>


    <style name="BaseBottomSheetDialogLight" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetLight</item>
    </style>
    <style name="BottomSheetLight">
        <item name="android:background">@drawable/bottom_sheet_light</item>
    </style>

    <style name="BaseBottomSheetDialogDark" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDark</item>
    </style>
    <style name="BottomSheetDark">
        <item name="android:background">@drawable/bottom_sheet_dark</item>
    </style>

</resources>